#!/usr/bin/env bash
#
# Gradle start up script for UN*X
#

if [ -n "$JAVA_HOME" ] ; then
  JAVA_HOME="$JAVA_HOME"
elif type -p java >/dev/null 2>&1 ; then
  JAVA_HOME=$(dirname $(dirname $(readlink -f $(which java))))
else
  echo "ERROR: JAVA_HOME is not set and java not found in PATH."
  exit 1
fi

DIRNAME=$(dirname "$0")
GRADLE_HOME="$DIRNAME/gradle/wrapper"

CLASSPATH="$GRADLE_HOME/gradle-wrapper.jar"

exec "$JAVA_HOME/bin/java" -cp "$CLASSPATH" org.gradle.wrapper.GradleWrapperMain "$@"
